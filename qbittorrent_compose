services:
  qbittorrent:
    image: lscr.io/linuxserver/qbittorrent:latest
    container_name: qbittorrent
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Asdia/Kuala_Lumpuir
      - WEBUI_PORT=8081
      - TORRENTING_PORT=6881
    volumes:
      - ./config/:/config
      - /home/admin/Download:/downloads #optional
    ports:
      - 8080:8080
      - 6881:6881
      - 6881:6881/udp
    restart: unless-stopped
